<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs')%>
    <div class="blogs content">
        <h2>All Blogs</h2>

        <% blogs.forEach(blog => {%>
            <a href="/blogs/<%= blog._id %>">
                <h1><%= blog.title %></h1>
                <p><%= blog.snippet %></p>
            </a>
        <% }) %>
    </div>
    <%- include('./partials/footer.ejs')%>
</body>
</html>